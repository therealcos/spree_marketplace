<fieldset id="supplier-address" data-hook>
	<div class="form-group">
		<%= form.text_field :name, :class => 'form-control', :placeholder => Spree.t(:brand) %>
	</div>
	<div class="form-group">
		<%= form.text_field :first_name, :class => 'form-control', :placeholder => Spree.t(:contacts_first_name) %>
	</div>
	<div class="form-group">
		<%= form.text_field :last_name, :class => 'form-control', :placeholder => Spree.t(:contacts_last_name) %>
	</div>
	<% unless spree_current_user %>
		<div class="form-group">
		<%= form.email_field :email, :value => spree_current_user.try(:email), :class => 'email form-control', :placeholder => Spree.t(:email) %>
		</div>
		<div class="form-group">
			<%= form.password_field :password, :class => 'form-control', :placeholder => Spree.t(:password), :minlength => 6 %>
		</div>
		<div class="form-group">
			<%= form.password_field :password_confirmation, :class => 'form-control', :placeholder => Spree.t(:password_confirmation), :minlength => 6 %>
		</div>
	<% end %>
</fieldset>
